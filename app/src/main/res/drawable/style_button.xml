<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <!--solid
                android:color="#D5D5D5" /-->
            <gradient
                android:startColor="#07910C"
                android:endColor="#07910C"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#07910C" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#07910C"
                android:endColor="#07910C"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#07910C" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>