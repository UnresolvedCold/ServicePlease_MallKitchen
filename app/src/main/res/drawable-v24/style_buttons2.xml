<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <!--solid
                android:color="#D5D5D5" /-->
            <gradient
                android:startColor="@color/colorMain"
                android:endColor="@color/colorMain"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/colorMain" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorButton2"
                android:endColor="@color/colorButton2"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/colorButton2Outline" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>